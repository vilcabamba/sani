<div class="login_modal">
  <h2 class="form-signin-heading">Inicia sesión</h2>

  <%= form_tag sessions_path, :class => "form-signin" do %>
    <%= text_field_tag :username, params[:username], placeholder: "usuario", required: true, :class => "form-control" %>
    <%= password_field_tag :password, nil, placeholder: "contraseña", required: true, :class => "form-control" %>
    <%= submit_tag "Iniciar sesión", :class => "btn btn-lg btn-primary btn-block", data: { disable_with: "Iniciando.." } %>
  <% end %>
</div>
